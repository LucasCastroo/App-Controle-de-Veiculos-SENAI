<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="ConteinerComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:background">@drawable/conteiner_components</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="conteiner_veiculos">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">610dp</item>
        <item name="android:background">@drawable/conteiner_components</item>
        <item name="android:layout_margin">25dp</item>
    </style>

    <style name="conteiner_ruv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">800dp</item>
        <item name="android:background">@drawable/conteiner_components</item>
        <item name="android:layout_margin">25dp</item>
    </style>

    <style name="Edit_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/cax_edit_text</item>
        <item name="android:padding">20dp</item>
        <item name="android:maxLength">60</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="campo_menor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/cax_edit_text</item>
        <item name="android:padding">20dp</item>
        <item name="android:maxLength">60</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="botao_entrar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/botao_cadastro</item>
    </style>

    <style name="campo_observacoes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/cax_edit_text</item>
        <item name="android:padding">20dp</item>
        <item name="android:maxLength">255</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="botao_prosseguir">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">100dp</item>
    <item name="android:layout_marginRight">100dp</item>
    <item name="android:layout_marginTop">15dp</item>
    <item name="android:padding">10dp</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:background">@drawable/botao_prosseguir</item>

    </style>



</resources>